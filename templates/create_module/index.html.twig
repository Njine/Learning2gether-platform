{% extends 'base.html.twig' %}

{% block title %}Hello CreateModuleController!{% endblock %}

{% block breadcrumbs %}
    <h6 class="breadcrumbs">
        <a class="crumb crumb-link" href="{{ path('partner') }}">Partner</a>
        <span class="crumb crumb-separator"> > </span>
        <span class="crumb">Create Module</span>
    </h6>
{% endblock %}

{% block body %}
    <section class="wrapper">


        <div class="row">
            <h1 class="mod-title">Module creation</h1>
        </div>

        <div class="row">
            <p class="mod-step">Step 1: To create a new module, please fill in one or more of the translations </p>
        </div>

        {{ form_start(form) }}
        {% for translation in form.translations %}

            <section class="module-cube">

                <div class="row">
                    <div class="col-3">
                        <h2>{{ translation.vars.value.language.name }}</h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        {{ form_row(translation) }}
                    </div>
                </div>
            </section>
        {% endfor %}


        <div class="row">
            <p class="mod-step">Step 2: Upload an image and assign the correct badge for module.</p>
        </div>


        <section class="module-cube">
            {{ form_row(form.image) }}
            {{ form_row(form.badge) }}
            {{ form_row(form.create) }}
        </section>
        {{ form_end(form) }}
    </section>




