{% extends 'base.html.twig' %}

{% block title %}Hello DashboardChapterController!{% endblock %}

{% block body %}
    <style>

    </style>

    <div class="container">
        <a class="btn btn-skills" href="{{ path('dashboard_module', {module: chapter.learningModule.id }) }}">Back</a>
        <hr>
        <h3>Pages</h3>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Page title</th>
                <th scope="col">Translations <i
                            title="This page's title and description translations.&#10;Click to go to that page's edit page."
                            class="help-icon far fa-question-circle"></i>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for page in chapter.pages %}
                {% set pageArray = pr.pageAsArray(page)[0] %}
                {% set pageFlags = fm.checkPageTranslationSolo(pageArray, languagecount) %}
                <tr>
                    <th scope="row">{{ pageArray['pageNumber'] }}</th>
                    <td>{% for pageTranslation in pageArray['translations'] %}
                            {% if pageTranslation['language']['name'] == language.name %}
                                {{ pageTranslation['title'] }}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        {% for pageTL in pageArray['translations'] %}
                            {% set badgeclass = 'badge-danger' %}
                            {% if pageTL['title'] != '' %}
                                {% set badgeclass = 'badge-success' %}
                            {% endif %}
                            <a class="badge {{ badgeclass }}" href="{{ path('edit_page', {'chapter': chapter.id, 'module': chapter.learningModule.id, 'page': page.id, lang: pageTL['language']['code']}) }}">{{ pageTL['language']['name'] }}</a>
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <h3>Quiz</h3>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Question</th>
                <th scope="col"># answers</th>
                <th scope="col">Translations <i
                            title="This question's title and description translations.&#10;Click to go to that question's edit page.&#10;Hover to see the missing translations."
                            class="help-icon far fa-question-circle"></i>
                </th>
                <th scope="col">&#128269;</th>

            </tr>
            </thead>
            <tbody>
            {% for question in cr.chapterQuizAsArray(chapter)[0]['quiz']['quizQuestions'] %}
                <tr>
                    <th scope="row">{{ question['questionNumber'] }}</th>
                    <td>{% for questionTranslation in question['translations'] %}
                            {% if questionTranslation['language']['name'] == language.name %}
                                {% if questionTranslation['title'] == '' %}
                                    Not yet translated
                                {% else %}
                                    {{ questionTranslation['title'] }}
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ question['answers']|length }}</td>
                    <td>
                        {% set quizFlags = fm.checkQuizTranslationSolo(cr.chapterQuizAsArray(chapter)[0])['quiz'] %}
                        {% set btnClass = 'badge-danger' %}
                        {% if  (quizFlags['questions'][question['questionNumber']]['questionNeededTranslations']|length - 5) | abs > 2 %}
                            {% set btnClass = 'badge-success' %}
                        {% elseif  (quizFlags['questions'][question['questionNumber']]['questionNeededTranslations']|length - 5) | abs == 2 %}
                            {% set btnClass = 'badge-warning' %}
                        {% endif %}
                        <a class="badge {{ btnClass }}"
                           title="{{ quizFlags['questions'][question['questionNumber']]['questionNeededTranslations'] | join('\n') }}"
                           href="#">{{ (quizFlags['questions'][question['questionNumber']]['questionNeededTranslations']|length - 5) | abs }}
                            / {{ languagecount }}</a>
                    </td>
                    <td>
                        <a href="{{ path('dashboard_question', {chapter: chapter.id , question: question['id']}) }}">Check</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
