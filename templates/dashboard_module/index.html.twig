{% extends 'base.html.twig' %}

{% block title %}Hello DashboardModuleController!{% endblock %}

{% block body %}

    <style>
        .help-icon {
            cursor: pointer;
        }
    </style>

    <div class="container">
        <a href="{{ path('dashboard') }}">Back</a>
        <table class="table table-hover text-center">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Chapter</th>
                <th scope="col"># pages</th>
                <th scope="col">Translations <i
                            title="This chapters' title and description translations.&#10;Click to go to that chapters edit page.&#10;Hover to see the missing translations."
                            class="help-icon far fa-question-circle"></i></th>
                <th scope="col">&#128269;</th>
            </tr>
            </thead>
            <tbody>
            {% for chapterObj in module.chapters %}
                {% set chapter = cr.chapterAsArray(chapterObj) %}
                {% if chapter is not empty %}

                {% set flagData = fm.checkChapterTranslationsSolo(chapter) %}
                {% set chapterNumber = chapter[0]['chapterNumber'] %}
                <tr>
                    <th scope="row">{{ chapterNumber }}</th>
                    <td>{% for chapterTranslation in chapter[0]['translations'] %}
                            {% if chapterTranslation['language']['name'] == language.name %}
                                {% if chapterTranslation['title'] == '' %}
                                    Not yet translated
                                {% else %}
                                    {{ chapterTranslation['title'] }}
                                {% endif %}
                            {% endif %}
                        {% endfor %}</td>
                    <td>{{ chapter[0]['pages']|length }}</td>
                    <td>
                        {% set btnClass = 'badge-danger' %}
                        {% if  (flagData['chapterNeededTranslations']|length - 5) | abs > 2 %}
                            {% set btnClass = 'badge-success' %}
                        {% elseif  (flagData['chapterNeededTranslations']|length - 5) | abs == 2 %}
                            {% set btnClass = 'badge-warning' %}
                        {% endif %}
                        <a class="badge {{ btnClass }}"
                           title="{{ flagData['chapterNeededTranslations'] | join('\n') }}"
                           href="{{ path('edit_chapter', {module: moduleArray['id'], chapter: chapter[0]['id']}) }}">{{ (flagData['chapterNeededTranslations']|length - 5) | abs }}
                            / {{ languagecount }}</a>
                    </td>
                    <td><a href="{{ path('dashboard_chapter', {chapter: chapter[0]['id']}) }}">Check</a></td>
                </tr>
                    {% else %}
                        <tr>
                            <th scope="row">{{ loop.index }}</th>
                            <td colspan="6">This chapter needs more pages! {link to chapter overview}</td>
                        </tr>
                {% endif %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
