{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit' | trans }}-{{ 'Chapter' | trans }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a class="crumb crumb-link" href="{{ path('dashboard') }}">{{ 'Dashboard' | trans }}</a></li>
    {% for crumb in chapter.editBreadcrumbs(app.user.language) %}
            {{ include('partials/breadcrumbs.html.twig') }}
        {% endfor %}
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h3>{{ 'Currently editing' | trans }}: {{ 'Module' | trans }} {{ module.id }}, {{ 'Chapter' | trans }} {{ chapter.chapterNumber }}</h3>

        <section class="module-cube">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
        </section>

        <button class="btn btn-skills">{{ 'Save' | trans }}</button>
        {{ form_end(form) }}

    </div>
{% endblock %}
