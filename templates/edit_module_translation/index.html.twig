{% extends 'base.html.twig' %}

{% block title %}EditModuleTranslation{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a class="crumb crumb-link" href="{{ path('dashboard') }}">Dashboard</a></li>
    {% for crumb in module.editBreadcrumbs(app.user.language) %}
        {{ include('partials/breadcrumbs.html.twig') }}
    {% endfor %}
{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="mod-title">{{ 'Edit Learning Module Translation' | trans }}</h1>
    </div>
    <div class="example-wrapper">
        <section class="module-cube">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            <button class="btn btn-skills">Save</button>
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}
