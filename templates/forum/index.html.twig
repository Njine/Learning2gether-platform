{% extends 'base.html.twig' %}

{% block title %}L2G Forums{% endblock %}

{% block body %}

   <h1>Forum</h1>
    <br>
    {{ form_start(searchbar) }}
    {{ form_end(searchbar) }} <br>

    <h2>Category ID</h2>
    {{ categoryID }}
    <h3>Category</h3>
    {{ category }}


    <h4>All Topics</h4>
    {% for topic in topics %}
        <a href="{{ path('topic', {'topic': topic.id}) }}">
            {{ topic.subject }}<br>
            {{  topic.date.format('m-d-Y H:i:s') }}<br>
        </a>
        <br>
    {% endfor %}

    <h4>Add New Topic</h4>
    {{ form_start(topic_now) }}
    {{ form_end(topic_now) }}

{% endblock %}


