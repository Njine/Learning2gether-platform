{% extends 'base.html.twig' %}

{% block title %}Meeting Place{% endblock %}

{% block body %}

    <section class="wrapper-two">
        <h1>Meeting place</h1>

        <section class="row forum-cat-row">
            <div class="col-8">
                <h2>Categories</h2>
            </div>

            <div class="col-4">
                <div class="row">
                    <div class="col-3">Skillset:</div>
                    <div class="col-3"><a class="btn btn-default btn-skills" href="{{ path('forum') }}">{{ 'ALL' | trans | upper }}</a> </div>
                    <div class="col-3"><a class="btn btn-default btn-skills" href="{{ path('forum', {'mode': 'SOFT'}) }}">{{ 'soft' | trans | upper }}</a> </div>
                    <div class="col-3"><a class="btn btn-default btn-skills" href="{{ path('forum', {'mode': 'HARD'}) }}">{{ 'hard' | trans | upper }}</a> </div>
                </div>
            </div>
        </section>

        <div class="card-columns">
            {% for category in allCategories %}
                <a href="{{ path('category', {'category': category.id}) }}">
                    <div class="card text-center">
                        <div class="card-body">
                            <p class="card-title forum-cat-title">
                                {{ category.learningModule.title(app.user.language) }}
                            </p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
