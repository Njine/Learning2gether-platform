{% extends 'base.html.twig' %}

{% block title %}Meeting Place{% endblock %}

{% block body %}

   <section class="example-wrapper">

       <p class="title-css">Meetingplace</p>
       <p class="subtitle-css">Categories</p>

                <div class="row forum-cat-row">
                    <div class="col-3 col-md-auto skillset">select skillset:</div>

                    <div class="col-3 col-md-auto">
                        <a class="btn btn-default btn-skills " href="{{ path('forum') }}">{{ 'ALL' | trans | upper }}</a>
                    </div>

                    <div class="col-3 col-md-auto">
                        <a class="btn btn-default btn-skills" href="{{ path('forum', {'mode': 'SOFT'}) }}">{{ 'soft' | trans | upper }}</a>
                    </div>
                    <div class="col-3 col-md-auto">
                        <a class="btn btn-default btn-skills" href="{{ path('forum', {'mode': 'HARD'}) }}">{{ 'hard' | trans | upper }}</a>
                    </div>
                </div>


        <div class="card-columns">
            {% for category in allCategories %}
                <a href="{{ path('category', {'category': category.id}) }}">
                    <div class="card text-center">
                        <div class="card-body">
                            <p class="card-title forum-cat-title">
                                {{ category.learningModule.title(app.user.language) }}
                            </p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
