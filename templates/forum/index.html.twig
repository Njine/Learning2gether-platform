{% extends 'base.html.twig' %}

{% block title %}L2G Forums{% endblock %}

{% block body %}

   <h1>Forum</h1>
    <br>
    {{ form_start(searchbar) }}
    {{ form_end(searchbar) }} <br>


    <h2>Current Category</h2>
    {{ categoryTitle }}<br>
    {{ categoryDescription }} <br><br>

    <h2>Topics</h2>

    {% for chapter in chapters %}
            {{ chapter.title(language) }}<br>
            {{ chapter.id }}
        <br>
    {% endfor %}


    <h4>All Questions</h4>
    {% for question in questions %}
        <a href="{{ path('question', {'question': question.id}) }}">
            {{ question.subject }}<br>
            {{  question.dateFormatted }}<br>
        </a>
        <br>
    {% endfor %}

    <h4>Add New Question</h4>
    {{ form_start(addQuestion) }}
    {{ form_end(addQuestion) }}

{% endblock %}


