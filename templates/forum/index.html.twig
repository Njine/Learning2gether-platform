{% extends 'base.html.twig' %}

{% block title %}L2G - {{ 'Forum' | trans }}{% endblock %}

{% block body %}

   <section class="example-wrapper">

       <p class="title-css">{{ 'Forum' | trans }}</p>
       <p class="subtitle-css">{{ 'Categories' | trans }}</p>

                <div class="row forum-cat-row">
                    <div class="col-3 col-md-auto skillset">{{ 'select skillset' | trans }}:</div>

                    <div class="col-3 col-md-auto">
                        <a class="btn btn-default btn-skills {% if mode == 'ALL' %} active-mode {% endif %} "  href="{{ path('forum') }}">{{ 'All' | trans | upper }}</a>
                    </div>
                    <div class="col-3 col-md-auto">
                        <a class="btn btn-default btn-skills {% if mode == 'SOFT' %} active-mode {% endif %}" href="{{ path('forum', {'mode': 'SOFT'}) }}">{{ 'soft' | trans | upper }}</a>
                    </div>
                    <div class="col-3 col-md-auto">
                        <a class="btn btn-default btn-skills {% if mode == 'HARD' %} active-mode {% endif %}" href="{{ path('forum', {'mode': 'HARD'}) }}">{{ 'hard' | trans | upper }}</a>
                    </div>
                </div>


        <div class="card-columns">
            {% for category in allCategories %}
                <a href="{{ path('category', {'category': category.id}) }}">
                    <div class="card text-center">
                        <div class="card-body">
                            <p class="card-title forum-cat-title">
                                {{ category.learningModule.title(app.user.language) }}
                            </p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
