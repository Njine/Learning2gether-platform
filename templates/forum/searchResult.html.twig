{% extends 'base.html.twig' %}

{% block title %}L2G Forums{% endblock %}

{% block body %}

<h3>Search results</h3>
<p>From Questions</p>
{% for results in resultsFromQuestion %}
    <a href="{{ path('topic', {'category': 1, 'chapter': 2}) }}"><br>
        {{ results.subject }}<br>
    </a>
{% endfor %}
<br><br>
<p>From Posts</p>
{% for results in resultsFromPost %}
    <a href="{{ path('question', {'category': 1, 'chapter': 1, 'question': results.topic.id}) }}"><br>
        {{ results.subject }}<br>
    </a>
{% endfor %}
    <br><br>
    <a href="{{ path('forum', {'category': 1}) }}">Return to forums</a>
{% endblock %}
