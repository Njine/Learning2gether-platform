{% extends 'base.html.twig' %}

{% block title %}ResetPassword{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ 'Reset your password!' | trans }}</h1>
        <p>
            {{ "Create your new password here " | trans }}
        </p>
        <p>
            {{ form_start(resetPasswordForm) }}
                {{ form_row(resetPasswordForm.selector) }}
                {{ form_row(resetPasswordForm.validator) }}
                {{ form_row(resetPasswordForm.password) }}
                {{ form_row(resetPasswordForm.passwordRepeat) }}
            <button class="btn" type="submit" name="reset-password-submit">Reset Password</button>
            {{ form_end(resetPasswordForm) }}
        </p>
        <p>
            {% for message in app.flashes('info') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
        {% endfor %}
        </p>
    </div>
{% endblock %}