{% extends 'base.html.twig' %}

{% block title %}{{ 'greeting'|trans }} PortalController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ 'greeting'|trans |capitalize }}</h1>

        <ul>Dummy Modules <!-- List of modules -->
            {% for module in modules %}
            <li><a href="{{ path('module', { module : module.id}) }}">{{ module.title(language) }}
                    : {{ module.description(language) }}</a>
                {% endfor %}
        </ul>
        {% if is_granted('ROLE_PARTNER') %}
        <hr>
        <a href="{{ path('partner') }}">Partner Zone</a>
        {% endif %}
        <hr>
        <a href="{{ path('profile') }}">My Profile</a>
        <hr>
        <a href="{{ path('forum') }}">Meeting Place</a>
        <hr>
        <a href="{{ path('app_logout') }}">Logout</a>
    </div>
{% endblock %}
