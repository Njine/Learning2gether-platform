{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="row">
        <div class="col-md-8">
            {# default mode #}
            <div class="profileimgwrap">
                <div class="profileimg profileimgwrap">
                    {% if user.avatar %}
                        <img src="{{ asset('upload/' ~ user.avatar) }}" alt="avatar of {{ user.name }}">
                    {% else %}
                        <img src="{{ asset('assets/img/logo_transparent.png') }}" alt="avatar of {{ user.name }}">
                    {% endif %}
                </div>
                <div class="profiletext">
                    <p>{{ user.username }}</p>
                    <p>{{ user.name }}</p>
                    <p>{{ user.email }}</p>
                    <div id="imagebutton">Edit Profile</div>
                </div>
            </div>
            {# edit mode : only if "edit-btn" is clicked #}
            <div class="profileimgwrap gone" id="show">
                <div class="profileimg profileimgwrap" id="changeavatar">
                    {{ form_start(profileForm) }}
{#                    <div class="gone" id="show">#}
                    {{ form_row(profileForm.avatar) }}
{#                    </div>#}
                </div>
                <div class="profiletext">
                    {{ form_row(profileForm.username) }}
                    {{ form_row(profileForm.name) }}
                    {{ form_row(profileForm.email) }}
                    <button class="button_2 btn">Update Profile</button>
                    {{ form_end(profileForm) }}
                </div>
            </div>

            {# Delete my account#}
            <div>
                {{ form_start(deleteBtn) }}
                {{ form_widget(deleteBtn.delete_user,
                    { 'label': 'Delete my account'

                    , 'attr': {'onclick': 'return confirm("Are you sure to delete your account?")'}

                    }) }}
                {{ form_end(deleteBtn) }}
            </div>


            {% for module in user.activeModules(modules) %}
                <div class="progression">
                    {% if loop.first %}
                        <h3 class="title">Active courses unlocked percentage</h3>
                    {% endif %}
                    <p class="coursetitle">{{ module.title(language) }}</p>
                    {% set userProgress = 0 %}
                    {% for userChapter in module.userChapters(user) %}
                        {% if userChapter.isUnlocked == true %}
                            {% set userProgress = userProgress + 1 %}
                        {% endif %}
                    {% endfor %}

                    <div class="progress progress_1">
                        <div class="progress-bar progress_1_bar" role="progressbar" style="width:{{ (userProgress / module.chapters | length) * 100}}%;" id="" aria-valuenow="20"
                             aria-valuemin="0" aria-valuemax="100"> {{ (userProgress / module.chapters | length) * 100 }}%
                        </div>
                    </div>
                    <a href="{{ path('module', {'module': module.id}) }}" class="completebutton button_2">Complete</a>
                </div>
            {% endfor %}
        </div>

        <div class="badges col-md-4 row">
            {% for badge in userBadges %}
                <div class="badge col-md-6">
                    <p>{{ badge.result.0.name }}</p>
                    <img class="badgeimage" src="{{ badge.result.0.image}}" alt="Badge" height="150" width="150">
                    <p>{{ badge.result.0.description }}</p>
                    <p>{{ badge.result.0.criteriaNarrative }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
    <script src="{{ asset('assets/js/profile.js') }}"></script>
{% endblock %}
