{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="row">
        <div class="col-md-8">
            <div class="profileimgwrap">
                <div class="profileimg">
                    {% if user.avatar %}
                        <img src="{{ asset('uploads/' ~ user.avatar) }}" alt="avatar of {{ user.name }}">
                    {% else %}
                        <img src="{{ asset('assets/img/logo_transparent.png') }}" alt="avatar of {{ user.name }}">
                    {% endif %}
                </div>
                <div id="changeavatar">
                    {{ form_start(profileForm) }}
                    <div id="imagebutton">+</div>
                    <div class="gone" id="show">
                        {{ form_row(profileForm.avatar) }}
                        <button class="button_2 btn">Change avatar</button>
                    </div>
                    {{ form_end(profileForm) }}
                </div>
            </div>
            <div class="profiletext">
                <p>{{ user.username }}</p>
                <p>{{ user.name }}</p>
                <p>{{ user.email }}</p>
            </div>
            <div class="progression">
                <h3 class="title">Your courses</h3>
                <p class="coursetitle">Javascript</p>
                    <div class="progress progress_1">
                        <div class="progress-bar progress_1_bar" role="progressbar" id="moduleprogress" aria-valuenow="25"
                             aria-valuemin="0" aria-valuemax="100">25%
                        </div>
                    </div>
                <button class="completebutton button_2">Complete</button>
            </div>

        </div>
        <div class="badges col-md-4 row">
            {% for badge in userBadges %}
                <div class="badge col-md-6">
                    <p>{{ badge.result.0.name }}</p>
                    <img class="badgeimage" src="{{ badge.result.0.image}}" alt="Badge" height="150" width="150">
                    <p>{{ badge.result.0.description }}</p>
                    <p>{{ badge.result.0.criteriaNarrative }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
    <script src="{{ asset('assets/js/script.js') }}"></script>
{% endblock %}
