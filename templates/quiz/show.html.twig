{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz {{ quiz.id }} for {{ chapter.title(user.language) }}</h1>


    <table class="table">
        <tbody>
            <tr>
                <th>Quiz Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Questions</th>
                <th></th>
                <th>Actions</th>
            </tr>
                {% set i = 1 %}
                {% for question in questions %}
                    {% set j = 1 %}
                    <tr>
                        <td>{{ i }}</td>
                        <td>
                            <h5>{{ question.title(user.language) }}</h5>
                            <table>
                                <tr>
                                    <th>#</th>
                                    <th>Answer</th>
                                    <th>Correct?</th>
                                    <th>Actions</th>
                                </tr>
                                {% for answer in question.answers %}
                                    <tr>
                                        <td>{{ j }}</td>
                                        <td>
                                            {{ answer.title(user.language) }}
                                        </td>
                                        <td>
                                            {% if answer.isCorrect %}
                                                Yes
                                            {% else %}
                                                No
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a class="badge badge-pill badge-primary" href="{{ path('quiz_question_show', {'id': question.id}) }}">show</a>
                                            <a class="badge badge-pill badge-dark" href="{{ path('quiz_question_edit', {'id': question.id}) }}">edit</a>
                                        </td>
                                    </tr>
                                    {% set j = j+1 %}
                                {% endfor %}
                                <tr>
                                    <td>
                                        <a class="btn btn-secondary btn-sm" href="{{ path('quiz_question_new') }}"><strong>+</strong> Add Answer</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                        <td>
                            <a class="badge badge-pill badge-primary" href="{{ path('quiz_question_show', {'id': question.id}) }}">show</a>
                            <a class="badge badge-pill badge-dark" href="{{ path('quiz_question_edit', {'id': question.id}) }}">edit</a>
                        </td>
                    </tr>
                    {% set i = i+1 %}
                {% endfor %}
        <tr>
            <td>
                <a class="btn btn-secondary" href="{{ path('quiz_question_new') }}"><strong>+</strong> Add Question</a>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('quiz_index') }}">back to list</a>

    <a href="{{ path('quiz_edit', {'id': quiz.id}) }}">edit</a>

{% endblock %}
