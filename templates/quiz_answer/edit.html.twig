{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit QuizAnswer' | trans }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a class="crumb crumb-link" href="{{ path('dashboard') }}">Dashboard</a></li>
    {% if returnCode == 'dash' %}
        {% for crumb in quiz_answer.dashboardBreadcrumbs(app.user.language) %}
            {{ include('partials/breadcrumbs.html.twig') }}
        {% endfor %}
    {% elseif returnCode == 'flow' %}
        {% for crumb in quiz_answer.editBreadcrumbs(app.user.language) %}
            {{ include('partials/breadcrumbs.html.twig') }}
        {% endfor %}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="row">
        <h1 class="mod-title">{{ 'Edit Answer' | trans }}</h1>
    </div>
    <div class="example-wrapper">
        <h2>{{ 'Edit QuizAnswer to:' | trans }}</h2>
        <h4>{{ quiz_answer.quizQuestion.trTitle(app.request.query.get('lang')) }}</h4>

        {{ include('quiz_answer/_form.html.twig', {'button_label': 'Update'}) }}

        <a href="{{ path('quiz_show', {'id': quiz_answer.quizQuestion.quiz.id, 'lang': app.request.query.get('lang')}) }}">{{ 'back to list' | trans }}</a>

        {{ include('quiz_answer/_delete_form.html.twig') }}
    </div>
{% endblock %}
