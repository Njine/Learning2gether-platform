{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit QuizQuestion' | trans }}{% endblock %}

{% block breadcrumbs %}
    <h6 class="breadcrumbs">
        <a class="crumb crumb-link" href="{{ path('partner') }}">Partner</a>
        <span class="crumb crumb-separator"> > </span>
        {% for crumb in quiz_question.breadcrumbs(app.user.language) %}
            {{ include('partials/breadcrumbs.html.twig') }}
        {% endfor %}
    </h6>
{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1 class="title-css">{{ 'Chapter: ' }}{{ quiz_question.quiz.chapter.trTitle(app.request.query.get('lang')) }}</h1>
        <h2 class="subtitle-css">{{ 'Edit QuizQuestion ' | trans }} {{ quiz_question.questionNumber }}</h2>

        {{ include('quiz_question/_form.html.twig', {'button_label': 'Update'}) }}
        {{ include('quiz_question/_delete_form.html.twig') }}
        <a href="{{ path('quiz_show', {'id': quiz_question.quiz.id, 'lang': app.request.query.get('lang')}) }}">
            <button class="button button_2 btn-margin">{{ 'Back to list' | trans }}</button>
        </a>
    </div>
{% endblock %}
