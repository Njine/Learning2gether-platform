{% extends 'base.html.twig' %}

{% block title %}{{ 'Edit QuizQuestion' | trans }}{% endblock %}

{% block breadcrumbs %}
    <h6 class="breadcrumbs">
        <a class="crumb crumb-link" href="{{ path('partner') }}">Partner</a>
        <span class="crumb crumb-separator"> > </span>
        {% for crumb in quiz_question.breadcrumbs(app.user.language) %}
            {{ include('partials/breadcrumbs.html.twig') }}
        {% endfor %}
    </h6>
{% endblock %}

{% block body %}
    <h1>{{ 'Chapter: ' }}{{ quiz_question.quiz.chapter.trTitle(app.request.query.get('lang')) }}</h1>
    <h2>{{ 'Edit QuizQuestion ' | trans }} {{ quiz_question.questionNumber }}</h2>

    {{ include('quiz_question/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('quiz_show', {'id': quiz_question.quiz.id, 'lang': app.request.query.get('lang')}) }}">{{'back to list' | trans }}</a>

    {{ include('quiz_question/_delete_form.html.twig') }}
{% endblock %}
