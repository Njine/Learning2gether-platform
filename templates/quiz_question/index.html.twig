{% extends 'base.html.twig' %}
{% block title %}QuizQuestion index{% endblock %}

{% block body %}
    <h1>QuizQuestion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Quiz Id</th>
                <th>Question Number</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {# {% for quiz_question in quiz_questions %} #}
        {# TODO: reminder to make sorting better #}
        {% for quiz_question in quiz_questions %}
            {% for quiz_question_translation in quiz_question.translations %}
                <tr>
                    <td>{{ quiz_question.getQuiz().id }}</td>
                    <td>{{ quiz_question.questionNumber }}</td>
                    <td>{{ quiz_question_translation.getTitle() }}</td>
                    <td>
                        <a class="badge badge-pill badge-primary" href="{{ path('quiz_question_show', {'id': quiz_question_translation.id}) }}">show</a>
                        <a class="badge badge-pill badge-dark" href="{{ path('quiz_question_edit', {'id': quiz_question.id}) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}


        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('quiz_question_new') }}"><strong>+</strong> Create new</a>
{% endblock %}
