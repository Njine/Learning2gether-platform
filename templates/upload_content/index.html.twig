{% extends 'base.html.twig' %}

{% block title %}Hello UploadContentController!{% endblock %}

{% block body %}
<div class="example-wrapper">
        <div class="row">
                <div class="col">
                        {{ form_start(uploader) }}
                        {{ form_row(uploader.upload, { 'attr': {'onchange': 'previewFile()'} }) }}
                        <button class="btn btn-skills">Upload</button>
                        {{ form_end(uploader) }}
                </div>
            <div class="col">
                <img style="height: 180px" class="uploadPreview" src="#" alt="">
            </div>
        </div>
    <div class="container border border-dark">
        {% for image in imagesAll %}
            <img src="{{ asset('upload/' ~ image.src) }}" width="200px" alt="{{ image.name }}">
        {% endfor %}
    </div>
</div>
        <script src="{{ asset('assets/js/UploaderPreviewScript.js') }}"></script>
{% endblock %}
