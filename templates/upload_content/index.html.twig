{% extends 'base.html.twig' %}

{% block title %}Hello UploadContentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {{ form_start(uploader) }}
    {{ form_row(uploader.upload) }}
    {{ form_row(uploader.submit) }}
    {{ form_end(uploader) }}
    {% for image in imagesAll %}
        <img src="{{ asset('uploads/' ~ image.src) }}" width="200px" alt="{{ image.name }}">
    {% endfor %}
</div>
{% endblock %}
